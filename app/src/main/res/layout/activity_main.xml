<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="15dp">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gambar">
        <TextView
            android:id="@+id/tvdownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Menu"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/tvabout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang Kami"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/tvkontak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kontak Kami"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/gambar"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:src="@drawable/icon1"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/layout"
        app:layout_constraintStart_toEndOf="@+id/text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Jelajahi Menu kami dan Temukan Favorit baru Anda!"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tvsapa"
        app:layout_constraintEnd_toStartOf="@+id/gambar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout" />
    <TextView
        android:id="@+id/tvsapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taste that Welcomes Like Morning Sun.\nRasa yang Menyambut Seperti Mentari Pagi."
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilihan Menu"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvsapa"
        app:layout_constraintBottom_toTopOf="@+id/linear1"/>
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2">
        <LinearLayout
            android:id="@+id/paketjumat"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/jumat" />
            <TextView
                android:id="@+id/tvcard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paket Jumat Berkah"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/makanan"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/makanan" />
            <TextView
                android:id="@+id/tvcard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Makanan"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear1">
        <LinearLayout
            android:id="@+id/minuman"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/minuman" />
            <TextView
                android:id="@+id/tvcard3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minuman"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/testimoni"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/testi" />
            <TextView
                android:id="@+id/tvcard4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Testimoni"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>